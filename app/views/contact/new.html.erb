<div class="row">
  <div class="span6 offset3"> 

<%= form_for @message, :url => contact_path do |form| %>

    
      <%= form.label :name %>
      <%= form.text_field :name %>
    
    

      <%= form.label :email %>
      <%= form.text_field :email %>

      <%= form.label :subject %>
      <%= form.text_field :subject %>
  
    

      <%= form.label :message %>
      <%= form.text_area :body %>
    </div>
  
    <div class="span6 offset6"> 

    <%= form.submit "Send", class: "btn btn-large btn-primary" %>


  <% end %>
  
</div>
